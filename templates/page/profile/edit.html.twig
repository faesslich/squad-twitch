{% extends '@App/page/page-templates/_edit.html.twig' %}

{% block main_inner %}
    <div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-7xl mx-auto">
        {% block edit_header %}
            <div class="mb-8">
                <h1 class="text-2xl md:text-3xl text-gray-200 font-bold">Dein Profil bearbeiten:</h1>
            </div>
        {% endblock %}

        {% block edit_content %}
            <div class="bg-slate-800 shadow-lg rounded-sm mb-8">
                <div class="flex flex-col md:flex-row md:-mr-px">
                    {% include '@App/page/profile/aside-navigation.html.twig' %}
                    <div class="grow">
                        {{ form_start(form) }}
                        {% block edit_content_form %}
                            <div class="py-6 px-10 space-y-6 min-h-[340px]">
                                {{ form_row(form.username) }}
                                {{ form_row(form.email) }}
                            </div>
                        {% endblock %}
                        {% block edit_content_submit %}
                            <div class="flex flex-col px-6 py-5 border-t border-slate-600">
                                <div class="flex self-end">
                                    <a href="{{ path('index') }}" class="btn border-slate-400 hover:border-slate-500 text-slate-400">abbrechen</a>
                                    <button type="submit" class="btn btn-primary ml-3">Daten speichern</button>
                                </div>
                            </div>
                        {% endblock %}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
{% endblock %}
